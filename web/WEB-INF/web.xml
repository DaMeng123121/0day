<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.yhq.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>selectAll</servlet-name>
        <servlet-class>com.yhq.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectAll</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>useradd</servlet-name>
        <servlet-class>com.yhq.servlet.UserAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>useradd</servlet-name>
        <url-pattern>/UserAddServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userdelete</servlet-name>
        <servlet-class>com.yhq.servlet.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userdelete</servlet-name>
        <url-pattern>/UserDeleteServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userById</servlet-name>
        <servlet-class>com.yhq.servlet.UserSelectByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userById</servlet-name>
        <url-pattern>/UserSelectByIdServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userupdate</servlet-name>
        <servlet-class>com.yhq.servlet.UserUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userupdate</servlet-name>
        <url-pattern>/UserUpdateServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userindex</servlet-name>
        <servlet-class>com.yhq.servlet.UserSelectById2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userindex</servlet-name>
        <url-pattern>/UserSelectById2Servlet</url-pattern>
    </servlet-mapping>

</web-app>